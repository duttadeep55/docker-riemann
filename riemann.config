(logging/init {:file "/var/log/riemann/riemann.log"})
 
(let [host "0.0.0.0"]
  (tcp-server {:host host})
  (udp-server {:host host})
  (ws-server  {:host host}))
 
(periodically-expire 5)
 
(def influx {
        :version  :0.9
        :host     "myinfluxdb"
        :port     8086
        :username "root"
        :password "root"
        :db       "riemann"
    }
)
 
(def influxBatchSender
  (batch 100 1/10
         (async-queue! :agg {:queue-size 1000
                             :core-pool-size 1
                             :max-pool-size 4
                             :keep-alive-time 60000}
                             (influxdb influx))))
   
(let [index (index)]
  (streams
   influxBatchSender
   #(info %)
  )
)
